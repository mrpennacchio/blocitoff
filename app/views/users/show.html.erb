<div class="container">
  <div class="row">
    <h1 class="user-prof-name">
      <%=@user.name.capitalize%>
      <small class="pull-right">To-Do's: <span class="to-do-count"><%=@user.items.count %></span></small>
    </h1>
    <div class="pull-left about-info">
      <p class="about-text">Create To-Do items <span class="glyphicon glyphicon-arrow-right"> </span></br>
      Items will be deleted after 7 days</br>
      Mark items complete by clicking the <span class='complete-icon glyphicon glyphicon-ok'></span></p>
    </div>
  </div>
  <div class="text-center">
    </br>
    <div class="to-do-list col-md-6 col-md-offset-3">
      <%= render partial: "items/form", locals: {user: @user} %>
      <%= render partial: "items/item", locals: {user: @user} %>
    </div>
  </div>
</div>

</div>
