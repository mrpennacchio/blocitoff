<!DOCTYPE html>
<html>
  <head>
    <title>Blocitoff</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all'%><!--, 'data-turbolinks-track': 'reload' %> -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto" rel="stylesheet">
    <%= javascript_include_tag 'application'%> <!--, 'data-turbolinks-track': 'reload' %>-->
  </head>

  <body>
    <nav class="navbar">
      <div><%= link_to "Blocitoff", root_path, class: "pull-left title" %></div>
      <div class="pull-right nav-user-info">
        <% if user_signed_in? %>
         <strong><%= current_user.name %></strong> |
            <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link nav-user-info' %>- <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link nav-user-info'  %>
     <% else %>
       <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link nav-user-info'  %>
       <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link nav-user-info'  %>
     <% end %>
     </div>
   </nav>

 <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash.now[:alert] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash.now[:alert] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

 <%= yield %>

  </body>
</html>
