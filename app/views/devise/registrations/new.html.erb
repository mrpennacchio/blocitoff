
<div class="container">
  <h2>Sign up</h2>
    <div class="col-md-4">
      <div class="row text-center">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Enter Name" %>
        </div>
      </br>
        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email" %>
        </div>
      </br>
        <div class="field">
          <!-- <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br /> -->
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
        </div>
      </br>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter Password Confirmation" %>
        </div>
      </div>

      <div class="adtl-login-actions">
        <%= f.submit "Sign up", class: "btn btn-default submit-btn-sign-up" %>
        </br>
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
        <% end -%>
      </div>

    <% end %>
    </div>
</div>
